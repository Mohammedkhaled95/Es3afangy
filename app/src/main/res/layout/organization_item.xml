<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#7aa7e6"



    >


    <TextView
        android:id="@+id/list_numbering"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/fonts"
        android:gravity="center"

        android:layout_height="53dp"
        android:text="1"
        android:textColor="#FFFFFF"



        />

    <TextView
        android:id="@+id/lis_organization_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="53dp"
        android:text="benha university"
        android:textColor="#FFFFFF"

        style="@style/fonts"
        android:gravity="center"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"



        />

    <TextView
        android:id="@+id/list_available_beds"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="53dp"
        android:text="500"
        style="@style/fonts"
        android:gravity="center"
        android:textColor="#FFFFFF"

        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"

        />

    <TextView
        android:id="@+id/list_last_update"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="53dp"
        android:text="5/5/2017, 9.00 pm fdfd fdgfdgfd   "
        style="@style/fonts"
        android:gravity="center"
        android:textColor="#FFFFFF"


        />


</LinearLayout>